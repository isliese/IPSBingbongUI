<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:background="@drawable/entire_forest_background"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    tools:context=".MainActivity">

    <!-- Calendar Tab, Forest Tab, Recommend Tab -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="fill"
        app:tabMode="fixed">

        <!-- Calendar Tab -->
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabCalendar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:text="Calendar"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <!-- Forest Tab -->
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabForest"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background_color"
            android:text="Forest"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <!-- Recommend Tab -->
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabRecommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background_color"
            android:text="Recommend"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </com.google.android.material.tabs.TabLayout>

    <!-- 키워드가 하나 생성될 때마다 나무 생성 -->
    <ImageButton
        android:id="@+id/each_tree"
        android:layout_width="81dp"
        android:layout_height="74dp"
        android:src="@drawable/entire_forest_tree"
        android:scaleType="fitCenter"
        android:background="null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintVertical_bias="0.268" />

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
